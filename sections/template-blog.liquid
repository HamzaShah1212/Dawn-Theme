{% assign blog = blogs['news'] %} <!-- Assuming the blog handle is 'news' -->

{% if blog.articles.size > 0 %}
  <h2 class="text-3xl font-semibold text-center my-8">Latest Blog Posts</h2>
  <ul class="space-y-6">
    {% for article in blog.articles %}
      <li class="bg-white shadow-lg rounded-lg p-6 border border-gray-200 hover:shadow-xl transition-all">
        <a href="{{ article.url }}" class="block">
          <h3 class="text-2xl font-bold text-blue-600 hover:text-blue-800">{{ article.title }}</h3>
          <p class="text-sm text-gray-600 mt-2">{{ article.excerpt }}</p>
        </a>
        <div class="mt-4">
          <h3 class="text-lg text-gray-700">{{ article.content | truncatewords: 50 }}</h3> <!-- Truncate the content to prevent overflow -->
        </div>
      </li>
    {% endfor %}
  </ul>
{% else %}
  <p class="text-center text-xl text-gray-500 mt-8">No blog posts available at the moment.</p>
{% endif %}
